# ── Required secrets ──────────────────────────────────────────────
# Redis connection (Railway injects REDIS_URL automatically via plugin)
REDIS_URL=redis://localhost:6379

# Admin panel access token — generate one: python -c "import secrets; print(secrets.token_hex(32))"
ADMIN_TOKEN=

# ── Optional secrets ──────────────────────────────────────────────
# Anthropic API key (required for LLM enrichment & walk-up backfill scoring)
ANTHROPIC_API_KEY=

# ── Event configuration ──────────────────────────────────────────
EVENT_SLUG=climate-week-2026
EVENT_NAME=SF Climate Week Cofounder Matchmaking
BASE_URL=http://localhost:8000

# Matching defaults
ROUND_DURATION_MINUTES=8
TOTAL_ROUNDS=10

# LLM provider: "claude", "ollama", or "none" (stub scores, no API calls)
LLM_PROVIDER=claude
OLLAMA_MODEL=llama3.2
OLLAMA_URL=http://localhost:11434

